{{page-title "HackathonTeam4FrontendPermits"}}

<AuApp>
  <AuMainHeader
    {{!-- @brandLink={{unless
      this.session.isAuthenticated
      "https://www.vlaanderen.be/nl"
    }} --}}
    @homeRoute="index"
    @appTitle="Toelatingsaanvragen beschermd onroerend erfgoed"
  >
    <li class="au-c-list-horizontal__item">
      <AuLinkExternal
        href="https://abb-vlaanderen.gitbook.io/informatie-lpdc/"
        @icon="question-circle"
        @skin="secondary"
      >
        Help
      </AuLinkExternal>
    </li>
    <li class="au-c-list-horizontal__item">
      {{!-- {{#if this.session.isAuthenticated}}
        <AuLink
            @route="auth.logout"
            @icon="logout"
          >
            Afmelden
          </AuLink>
      {{else}} --}}
      <AuButton @isCompact={{true}} />
      {{!-- {{/if}} --}}
    </li>
  </AuMainHeader>

  <AuMainContainer as |main|>
    <main.content>
      <AuBodyContainer @scroll={{true}} id="content">
        {{outlet}}
      </AuBodyContainer>
    </main.content>
  </AuMainContainer>
</AuApp>